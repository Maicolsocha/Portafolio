---
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro"
import Experience from "../components/Experience.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import LinkedInICon from "../icons/LinkedInIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Layout from "../layouts/Layout.astro";
import BriefCaseIcon from "../icons/BriefCaseIcon.astro";
import Projects from "../components/Projects.astro"
---

<Layout title="Portafolio de Maicol Socha - Desarrollador Y programador Web con 2 años de experiencia" description="Contrata a Maicol Socha, un desarrollador web con 2 años de experiencia. Especializado en JavaScript, HTML, CSS y frameworks modernos.">
    <main class="px-6">
        <SectionContainer class="py-44 pb-20">
            <h1
                class="text-white text-3xl text-pretty md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6"
            >
                Hola, Soy Maicol Socha
                <a
                    href="https://www.linkedin.com/in/maicol-socha"
                    target="_blank"
                    rel="noopener"
                    class="flex items-center">
                    <Badge>Disponible Para Trabajar</Badge>
                </a>
            </h1>
            <h2 class="text-2xl text-wrap opacity-90">
                2 años de experiencia. 
                <span class="text-blue-300/90">
                    Desarrollador web de bogota colombia
                </span>
            </h2>

            <nav class="flex gap-4 mt-7 flex-wrap">
                <SocialPill href="https://www.LinkedInICon.com/in/maicol-socha">
                    <LinkedInICon class="size-4 md:size-6" />LinkedIn
                </SocialPill>
                <SocialPill href="https://github.com/Maicolsocha">
                    <GithubIcon class="size-4 md:size-6" />Github
                </SocialPill>
                <SocialPill href="mailto:maisochajimenez@gmail.com">
                    <MailIcon class="size-4 md:size-6" />maisochajimenez@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>
        
        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-5 mb-5 flex gap-x-2 items-center">
                <BriefCaseIcon class="size-8"/>
                Experiencia Laboral
            </h2>
            <Experience/>
        </SectionContainer>

        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-5 mb-5 flex gap-x-2 items-center">
                <CodeIcon class="size-8"/>
                Proyectos
            </h2>
            <Projects/>
        </SectionContainer>
    </main>
</Layout>
